{
  "env": {
    "browser": true,
    "es2021": true,
    "jest/globals": true
  },
  "plugins": ["jsdoc", "jest", "prettier"],
  "extends": [
    "airbnb-base",
    "plugin:jsdoc/recommended",
    "plugin:jest/recommended",
    "plugin:prettier/recommended"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "settings": {},
  "rules": {
    "import/extensions": [
      "error",
      "always",
      {
        "ignorePackages": true,
        "pattern": {
          "js": "always"
        }
      }
    ],
    "no-console": "off",
    "no-plusplus": "off",
    "prettier/prettier": "error",
    "no-template-curly-in-string": "off"
  },
  "globals": {
    "AZION_VERSION_ID": "readonly"
  }
}
